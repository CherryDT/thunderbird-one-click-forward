{
  "manifest_version": 2,
  "name": "One-Click Forward",
  "version": "1.0.1",
  "author": "David Trapp",
  "description": "Forward emails directly through a dropdown of predefined recipients",
  "permissions": [
    "accountsRead",
    "messagesRead",
    "messagesMove",
    "compose",
    "compose.send",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "message_display_action": {
    "default_icon": "icons/forward-icon-16.png",
    "default_title": "Quick Forward",
    "default_popup": "popup/chooseRecipient.html"
  },
  "icons": {
    "48": "icons/mail-forward-48.png"
  },
  "applications": {
    "gecko": {
      "id": "one-click-forward@david-trapp.com",
      "strict_min_version": "78.0"
    }
  },
  "options_ui": {
    "page": "options.html"
  }
}
